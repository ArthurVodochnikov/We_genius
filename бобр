while (attempts > 0)
            {
                Console.Write("Попытка №" + (11 - attempts) + ": ");
                int guess = Convert.ToInt32(Console.ReadLine());

                if (guess == number)
                {
                    Console.WriteLine("Вы угадали число!");
                    return;
                }
                else if (guess < number)
                {
                    Console.WriteLine("Загаданное число больше.");
                }
